#Error pages list
 ErrorDocument 404 404.html
 ErrorDocument 400 400.html
 ErrorDocument 405 405.html

 <Files .htaccess>
    Order allow,deny
    Deny from all
</Files>


#HTML
 <IfModule mod_rewrite.c >
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([^.]+)$ $1.html [L]
 </ifModule>